<Window x:Class="IngatlanEF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanEF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="10,10,10,0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,0,10,10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Felhasználónév:"/>
            <TextBox x:Name="tbxFelhNev"/>
            <Label Content="Jelszó:"/>
            <TextBox x:Name="tbxJelszo"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Bejelentkezés" Click="btnBelepesClick" Margin="10" Padding="10"/>
                <Button Content="Mégsem" Click="btnMegsemClick" Margin="10" Padding="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
