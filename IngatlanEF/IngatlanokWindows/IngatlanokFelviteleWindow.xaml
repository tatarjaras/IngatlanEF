<Window x:Class="IngatlanEF.IngatlanokWindows.IngatlanokFelviteleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanEF.IngatlanokWindows"
        mc:Ignorable="d"
        Title="IngatlanokFelviteleWindow" Height="400" Width="500">
    <Grid>
        <StackPanel>

            <Label Content="Telepules"/>
            <TextBox x:Name="tbxTelepules"/>
            <Label Content="Cim"/>
            <TextBox Name="tbxCim"/>
            <Label Content="Ar"/>
            <TextBox x:Name="tbxAr"/>
            <Label Content="Tipus"/>
            <ComboBox Name="cbxTipus"/>
            <Label Content="KepNev"/>
            <TextBox x:Name="tbxKepNev"/>
            <Label Content="UgyintezoId"/>
            <ComboBox Name="cbxUgyintezoId" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Metés" Click="btnMentes_click" Margin="10" Padding="10"/>
                <Button Content="Kilépés" Click="btnMegse_click" Margin="10" Padding="10"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
