<Window x:Class="IngatlanEF.IngatlanokWindows.IngatlanokModositowindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanEF.IngatlanokWindows"
        mc:Ignorable="d"
        Title="IngatlanokModositowindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ComboBox Name="cbxSelect" SelectionChanged="cbxSelect_select"/>
            <Label Content="Telepules"/>
            <TextBox x:Name="tbxTelepules"/>
            <Label Content="Cim"/>
            <TextBox Name="tbxCim"/>
            <Label Content="Ar"/>
            <TextBox x:Name="tbxAr"/>
            <Label Content="Tipus"/>
            <ComboBox Name="cbxTipus"/>
            <Label Content="KepNev"/>
            <TextBox x:Name="tbxKepNev"/>
            <Label Content="UgyintezoId"/>
            <ComboBox Name="cbxUgyintezoId" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Metés" Click="btnMentes_click"  Margin="10" Padding="10"/>
                <Button Content="Kilépés" Click="btnMegse_click" Margin="10" Padding="10"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
