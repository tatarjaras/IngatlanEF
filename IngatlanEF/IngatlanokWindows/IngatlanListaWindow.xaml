<Window x:Class="IngatlanEF.IngatlanokWindows.IngatlanListaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanEF.IngatlanokWindows"
        mc:Ignorable="d"
        Title="IngatlanListaWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgrIngatlanok"/>
        <Button x:Name="btnBezaras" 
                Content="Bezárás" 
                Click="btnBezar" 
                Margin="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Padding="3"
                Grid.Row="1"/>
    </Grid>
</Window>
